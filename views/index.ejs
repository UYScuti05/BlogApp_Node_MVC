<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog app</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <!-- Heading -->
    <h2 id="topHeading">Blog Site</h2>  

    <!-- List -->
    <div id="listDiv">
        <div class="container">
            <a href="/add-blog">
                <button type="button" class="btn btn-success">Add Blog</button>
            </a>
        </div>

        <h3 id="listHeading">Blogs</h3>

        <div class="container" id="tableDivContainer">
            <div class="row justify-content-center">
                <div class="col-1 listItem" id="tableHeading">
                    No.
                </div>
                <div class="col-8 listItem" id="tableHeading">
                    Title
                </div>
                <div class="col-2 listItem" id="tableHeading">
                    Actions
                </div>
            </div>
        </div>
        <% for(var i=0;i<blogs.length;i++){%>
            <div class="container" id="tableDivContainer">
                <div class="row justify-content-center">
                    <div class="col-1 listItem">
                        <%=i+1%>
                    </div>
                    <div class="col-8 listItem">
                        <%=blogs[i].title%>
                    </div>
                    <div class="col-2 listItem">
                        <a href="/view-blog?id=<%= blogs[i]._id%>" class="btn btn-primary btn-sm" id="viewBtn">
                            View
                        </a>
                        <a href="/update-blog?id=<%= blogs[i]._id%>" class="btn btn-success btn-sm" id="viewBtn">
                            Edit
                        </a>
                        <a class="btn btn-danger btn-sm delete" id="deleteBtn" data-id=<%= blogs[i]._id%>>
                            Delete
                        </a>
                    </div>
                </div>
            </div>
        <%}%>

    </div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/js/index.js"></script>
</body>
</html>